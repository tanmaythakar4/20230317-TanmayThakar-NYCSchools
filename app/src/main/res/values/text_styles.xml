<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppFont" />

    <style name="AppFont.Regular">
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="AppFont.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H1" parent="AppFont.Bold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="H2" parent="AppFont.Bold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="H3" parent="AppFont.Bold">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LargeText" parent="AppFont.Regular">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="SmallText" parent="AppFont.Regular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallCaps" parent="AppFont.Regular">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MetaText" parent="AppFont.Regular">
        <item name="android:textSize">12sp</item>
    </style>

</resources>